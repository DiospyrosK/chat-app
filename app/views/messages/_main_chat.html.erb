<div class="chat-header">
  <div class="main-chat-name">
    <%= @room.name %>
  </div>
  <div class="chat-finish-button">
    <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete } %>
  </div>
</div>

<div class="messages">
  <%= render partial: "message", collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: "footer", local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: "message-form", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "submit-button" %>
<% end %>